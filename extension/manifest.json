{
    "manifest_version": 3,
    "name": "Google Meet Audio Recorder with Transcription",
    "version": "1.0",
    "description": "Records audio from Google Meet and transcribes it in real time.",
    "permissions": [
      "activeTab",
      "tabCapture",
      "storage",
      "offscreen"
    ],
    "host_permissions": [
      "https://meet.google.com/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  